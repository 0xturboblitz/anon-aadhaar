{
  "name": "country-identity-packages",
  "version": "0.1.2",
  "description": "A set of tools to anonymously prove your identity",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build:libraries": "yarn workspaces run build",
    "test-publish:libraries": "yarn workspaces run test-publish",
    "publish:libraries": "yarn workspaces run publishtonpm",
    "test:libraries": "yarn workspaces run test",
    "dev-setup:pcd": "yarn workspace anon-aadhaar-pcd run dev-setup",
    "pdf:pcd": "yarn workspace anon-aadhaar-pcd run gen-pdf",
    "contracts:pcd": "yarn workspace anon-aadhaar-pcd run contract",
    "dev-install:pcd": "yarn workspace anon-aadhaar-pcd run dev-install",
    "lint": "yarn workspaces run lint",
    "version:anon-aadhaar-pcd": "cd packages/anon-aadhaar-pcd && yarn version --new-version $npm_package_version",
    "version:anon-aadhaar-react": "cd packages/anon-aadhaar-react && yarn version --new-version $npm_package_version",
    "version:anon-aadhaar-contracts": "cd packages/anon-aadhaar-contracts && yarn version --new-version $npm_package_version",
    "postversion": "yarn version:anon-aadhaar-pcd && yarn version:anon-aadhaar-react && yarn version:anon-aadhaar-contracts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/privacy-scaling-explorations/anon-aadhaar.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/circomlib"
    ]
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/privacy-scaling-explorations/anon-aadhaar/issues"
  },
  "homepage": "https://github.com/privacy-scaling-explorations/anon-aadhaar#readme"
}
